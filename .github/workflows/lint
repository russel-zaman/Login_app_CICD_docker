# This workflow will install Python dependencies, run tests, and lint with a single version of Python
# For more information see: https://docs.github.com/en/actions/automating-builds-and-tests/building-and-testing-python

name: Linter

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "dev" ]

permissions:
  contents: read

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python 3.10
      uses: actions/setup-python@v3
      with:
        python-version: "3.10"

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r app/requirements.txt  # Install your project dependencies
        pip install pylint

    - name: Fetch latest changes
      run: git fetch origin main --depth=1

    - name: Get changed files
      id: get_changed_files
      run: |
        CHANGED_FILES=$(git diff --name-only FETCH_HEAD HEAD -- '*.py')
        # Convert newline-separated file list into a space-separated list for linting
        CHANGED_FILES=$(echo "$CHANGED_FILES" | tr '\n' ' ')
        echo "CHANGED_FILES=$CHANGED_FILES" >> $GITHUB_ENV    

    - name: Run linter
      run: |
        if [ -n "$CHANGED_FILES" ]; then
          pylint $CHANGED_FILES
        else
          echo "No Python files have changed."
        fi


    # - name: Run tests
    #   run: |
    #     pytest  # Run your tests using pytest

